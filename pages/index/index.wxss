/**index.wxss**/
@import "../../public/wxss/public.wxss";
page{
  background-color: #eee;
}
swiper{
  width: 100%;
}
swiper image{
  width: 100%;
  height: 100%;
}

.movie{
  margin-top: 24rpx;
  padding-top: 30rpx;
  background-color: #fff;
}
.movie .movieTitle{
  margin-bottom: 22rpx;
  margin-left: 0;
  padding-left: 24rpx;
  font-size: 36rpx;
  border-left: 5rpx solid #d81e06;
  font-weight: 600;
}

.movieitem{
    box-sizing: border-box;  
    overflow: hidden;
    margin-left:20rpx;
    width: 260rpx;
    font-size: 26rpx;
    height: 340rpx;
    position: relative;
    display: inline-block
}
.movieitem image{
    height: 320rpx;
    width: 100%;
}
.movieitem .title{
    color: #fff;
    position: absolute;
    bottom: 26rpx;
    left: 10rpx;
}
.movieitem .title span{
    padding-left:20rpx;
    color: #e09015;
}
